<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Ild_Music.Views"
        xmlns:vm="using:Ild_Music.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:aconverters="clr-namespace:Ild_Music.Avalonia.Converters"


        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ild_Music.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Ild_Music"
        HasSystemDecorations="false"
        Background="#1b2b33"
        WindowStartupLocation="CenterScreen">
        
    <Window.Styles>
        <Style Selector="Panel.pnlClose">
            <Setter Property="Height" Value="10"/>
        </Style>
        <Style Selector="Panel.pnlClose:pointerover">
            <Setter Property="Height" Value="20"/>
        </Style>

        <Style Selector="StackPanel.NavBarItem  Viewbox  Canvas  Path">
            <Setter Property="Fill" Value="#7b7f6b"/>
        </Style>
        <Style Selector="StackPanel.NavBarItem  TextBlock">
            <Setter Property="Foreground" Value="#7b7f6b"/>
        </Style>
        <Style Selector="StackPanel.NavBarItem:pointerover  Viewbox  Canvas  Path">
            <Setter Property="Fill" Value="#fff"/>
        </Style>
        <Style Selector="StackPanel.NavBarItem:pointerover  TextBlock">
            <Setter Property="Foreground" Value="#fff"/>
        </Style>

        <Style Selector="StackPanel.PlayerButton Viewbox Canvas Path">
            <Setter Property="Fill" Value="#7b7f6b"/>
        </Style>
        <Style Selector="StackPanel.PlayerButton:pointerover Viewbox Canvas Path">
            <Setter Property="Fill" Value="#fff"/>
        </Style>

        

        <Style Selector="Slider.thumby /template/ Thumb#thumb">
            <Setter Property="Template">
                <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <!-- <Grid.RowDefinitions>
                            <RowDefinition Height="4" />
                            <RowDefinition Height="4" />
                            <RowDefinition />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="4" />
                        </Grid.RowDefinitions>
                        <Ellipse Grid.Row="0" Grid.RowSpan="2" Fill="#1b88e8" />
                        <Rectangle Grid.Row="1" Grid.RowSpan="3" Fill="#1b88e8" />
                        <Ellipse Grid.Row="3" Grid.RowSpan="2" Fill="#1b88e8" /> -->
                    </Grid>
                </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style Selector="Slider.thumby /template/ Grid#HorizontalTemplate">
            
        </Style>

        <Style Selector="Slider.thumby /template/ TickBar#TopTickBar">
            <Setter Property="Height" Value="0"/>
        </Style>
        <Style Selector="Slider.thumby /template/ TickBar#BottomTickBar">
            <Setter Property="Height" Value="0"/>
        </Style>

        <Style Selector="Window">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Background="#1b2b33">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="896"/>
                        </Grid.ColumnDefinitions>


                        <!--Header-->
                        <Grid Background="#16242b"
                                Grid.Row="0"
                                Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <!--Header label-->
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <TextBlock Text="ILD-MUSIC"
                                        Foreground="White"
                                        FontSize="35"
                                        VerticalAlignment="Top"
                                        FontFamily="Showcard Gothic"
                                        Width="180" 
                                        Height="38" 
                                        Margin="10,0,0,0"/>
                            </StackPanel>      

                            <!--DragMove area-->                          
                            <Grid x:Name="DragBar"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Background="Transparent"/>

                            <!--Window manipulation buttons-->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Grid.Column="2">
                                <Button VerticalAlignment="Top"
                                        Padding="0"
                                        Click="OnHideClick">
                                        <Border BorderThickness="2"
                                                BorderBrush="#0be0c2"
                                                CornerRadius="3 3 3 3">
                                            <Panel Classes="pnlClose"
                                                Width="30"
                                                Background="#0be0c2"/>
                                        </Border>
                                </Button>

                                <Button VerticalAlignment="Top"
                                        Padding="0"
                                        Click="OnCloseClick">
                                        <Border BorderThickness="2"
                                                BorderBrush="#e00b29"
                                                CornerRadius="3 3 3 3">
                                            <Panel Classes="pnlClose"
                                                Width="30"
                                                Background="#e00b29"/>
                                        </Border>
                                </Button>
                            </StackPanel>
                        </Grid>
                    
                        <!--NavBar-->
                        <Grid Grid.Row="1"
                              Grid.ColumnSpan="2"
                              ColumnDefinitions = "auto, *"
                              Background="Transparent">

                                <!--NavBar-->
                                <Grid x:Name="NavBar"
                                      Grid.Column="0" 
                                      Background="#50000000"
                                      HorizontalAlignment="Left">
                                    <!--NavBarItems-->
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Classes="NavBarItem"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Top"
                                                    HorizontalAlignment="Left"
                                                    Width="50"
                                                    PointerPressed="OnHomePointerPressed">
                                                <Viewbox Classes="vb" Width="24" Height="24" Margin="8,0" HorizontalAlignment="Left">
                                                    <Canvas Width="24" Height="24">
                                                        <Path Data="M 12 2 A 1 1 0 0 0 11.289062 2.296875 L 1.203125 11.097656 A 0.5 0.5 0 0 0 1 11.5 A 0.5 0.5 0 0 0 1.5 12 L 4 12 L 4 20 C 4 20.552 4.448 21 5 21 L 9 21 C 9.552 21 10 20.552 10 20 L 10 14 L 14 14 L 14 20 C 14 20.552 14.448 21 15 21 L 19 21 C 19.552 21 20 20.552 20 20 L 20 12 L 22.5 12 A 0.5 0.5 0 0 0 23 11.5 A 0.5 0.5 0 0 0 22.796875 11.097656 L 12.716797 2.3027344 A 1 1 0 0 0 12.710938 2.296875 A 1 1 0 0 0 12 2 z" />
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock Text="Home" 
                                                            Margin="7,0"
                                                            VerticalAlignment="Bottom"
                                                            HorizontalAlignment="Left"
                                                            FontSize="10"
                                                            FontWeight="Medium"/>
                                        </StackPanel>

                                        <StackPanel Classes="NavBarItem"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Top"
                                                    HorizontalAlignment="Left"
                                                    PointerPressed="OnCollectsPointerPressed">
                                                <Viewbox Classes="vb" Width="24" Height="24" Margin="8,4" HorizontalAlignment="Left">
                                                    <Canvas Width="24" Height="24">
                                                        <Path Data="M4 20H18V22H4C2.9 22 2 21.1 2 20V6H4V20M22 4V16C22 17.1 21.1 18 20 18H8C6.9 18 6 17.1 6 16V4C6 2.9 6.9 2 8 2H20C21.1 2 22 2.9 22 4M20 4H8V16H20V4M18 6H13V13L15.5 11.5L18 13V6Z" />
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock Text="Collects" 
                                                            Margin="3,0"
                                                            VerticalAlignment="Bottom"
                                                            HorizontalAlignment="Center"
                                                            FontSize="10"
                                                            FontWeight="Medium"/>
                                        </StackPanel>

                                        <StackPanel Classes="NavBarItem"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Top"
                                                    HorizontalAlignment="Left"
                                                    PointerPressed="OnSettingPointerPressed">
                                                <Viewbox Classes="vb" Width="24" Height="24" Margin="8,4" HorizontalAlignment="Left">
                                                    <Canvas Width="24" Height="24">
                                                        <Path Data="M15 17V14H18V12L22 15.5L18 19V17H15M17 18V21H14V23L10 19.5L14 16V18H17M12 8C9.79 8 8 9.8 8 12C8 13.91 9.35 15.54 11.21 15.92L16 11.86C15.93 9.71 14.16 8 12 8M12 14C10.9 14 10 13.11 10 12S10.9 10 12 10 14 10.9 14 12 13.11 14 12 14M21.66 8.73L19.66 5.27C19.54 5.05 19.28 4.96 19.05 5.05L16.56 6.05C16.05 5.64 15.5 5.31 14.87 5.05L14.5 2.42C14.46 2.18 14.25 2 14 2H10C9.75 2 9.54 2.18 9.5 2.42L9.13 5.07C8.5 5.33 7.96 5.66 7.44 6.07L5 5.05C4.77 4.96 4.5 5.05 4.39 5.27L2.39 8.73C2.26 8.94 2.31 9.22 2.5 9.37L4.57 11L4.5 12L4.57 13L2.46 14.63C2.26 14.78 2.21 15.06 2.34 15.27L4.34 18.73C4.45 19 4.74 19.11 5 19L5 19L7.5 18C7.74 18.19 8 18.37 8.26 18.53L9.91 17.13C9.14 16.8 8.46 16.31 7.91 15.68L5.5 16.68L4.73 15.38L6.8 13.8C6.4 12.63 6.4 11.37 6.8 10.2L4.69 8.65L5.44 7.35L7.85 8.35C8.63 7.45 9.68 6.82 10.85 6.57L11.25 4H12.75L13.12 6.62C14.29 6.86 15.34 7.5 16.12 8.39L18.53 7.39L19.28 8.69L17.2 10.2C17.29 10.46 17.36 10.73 17.4 11H19.4L21.5 9.37C21.72 9.23 21.78 8.95 21.66 8.73M12 8C9.79 8 8 9.8 8 12C8 13.91 9.35 15.54 11.21 15.92L16 11.86C15.93 9.71 14.16 8 12 8M12 14C10.9 14 10 13.11 10 12S10.9 10 12 10 14 10.9 14 12 13.11 14 12 14M12 8C9.79 8 8 9.8 8 12C8 13.91 9.35 15.54 11.21 15.92L16 11.86C15.93 9.71 14.16 8 12 8M12 14C10.9 14 10 13.11 10 12S10.9 10 12 10 14 10.9 14 12 13.11 14 12 14Z" />
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock Text="Settings" 
                                                            Margin="3,0"
                                                            VerticalAlignment="Bottom"
                                                            HorizontalAlignment="Center"
                                                            FontSize="10"
                                                            FontWeight="Medium"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>      

                                <!--ContextArea-->
                                <Grid Grid.Column="2">
                                    <ContentControl Grid.Row="3"
                                                    Content="{Binding CurrentVM}"> 
                                    </ContentControl>
                                </Grid>
                        </Grid>

                        <!--Player-->
                        <Grid Grid.Row="2"
                              ColumnSpan="2"
                              Height="40"
                              Background="#1b2533">

                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="15,0,0,0">

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M6,6H8V18H6M9.5,12L18,18V6M16,14.14L12.97,12L16,9.86V14.14Z" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="0,5">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M8.5,8.64L13.77,12L8.5,15.36V8.64M6.5,5V19L17.5,12" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="0,5">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M6,18L14.5,12L6,6M8,9.86L11.03,12L8,14.14M16,6H18V18H16" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="0,5">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M17,3L22.25,7.5L17,12L22.25,16.5L17,21V18H14.26L11.44,15.18L13.56,13.06L15.5,15H17V12L17,9H15.5L6.5,18H2V15H5.26L14.26,6H17V3M2,6H6.5L9.32,8.82L7.2,10.94L5.26,9H2V6Z" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="0,5">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M6,5.75L10.25,10H7V16H13.5L15.5,18H7A2,2 0 0,1 5,16V10H1.75L6,5.75M18,18.25L13.75,14H17V8H10.5L8.5,6H17A2,2 0 0,1 19,8V14H22.25L18,18.25Z" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="0,5">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M18,18H6V6H18V18Z" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel Classes="PlayerButton"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Margin="0,5">
                                    <Viewbox Classes="vb" Width="24" Height="24" Margin="2,0" HorizontalAlignment="Left">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M7,9V15H11L16,20V4L11,9H7Z" />
                                        </Canvas>
                                    </Viewbox>
                                </StackPanel>

                                <StackPanel VerticalAlignment="Top"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                            <TextBlock Text="00:00" Foreground="White" Margin="10,10"
                                                        FontSize="14" FontWeight="Light" VerticalAlignment="Bottom"/>

                                            <Slider Classes="thumby" VerticalAlignment="Top" Width="350" Foreground="Red" Margin="5, -10,0,0"/>

                                            <TextBlock Text="00:00" Foreground="White" Margin="10,10"
                                                        FontSize="14" FontWeight="Light"/>                     
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
    </Window.Styles>
</Window>
